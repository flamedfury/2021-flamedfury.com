<!-- _includes/recently-read.njk -->
{% set recentlyRead = oku.collections[2].books | limit(9) %}
{% if recentlyRead.length %}
<div class="container">
<div class="grid">
{% for item in recentlyRead %}
{% if item.thumbnail %}
<div class="cell">
<a href="https://oku.club/book/{{ item.slug }}">
<img src="{{ item.thumbnail }}" alt="book cover for {{ item.title }} by {{ item.authors[0]['name'] }}" class="responsive-image" height="auto" width="150px">
</a>
</div>
{% else %}
<div class="cell">
<div class="book-title-overlay">
<a href="https://oku.club/book/{{ item.slug }}">
<img src="../img/bookshelf/generic-cover.png" alt="book cover for {{ item.title }} by {{ item.authors[0]['name'] }}" class="responsive-image" height="auto" width="150px">
<div class="book-title-overlay-text">{{ item.title }}</div>
</a>
</div>
</div>
{% endif %}
{% endfor %}
</div>
</div>
{% endif %}

